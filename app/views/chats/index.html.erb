<p id="notice"><%= notice %></p>
<br>
<%= link_to '新しくつぶやく', new_chat_path %>
<br>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>今までのつぶやき</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.content %></td>
        <td><%= link_to '一覧', root_path %></td>
        <td><%= link_to '編集', edit_chat_path(chat) %></td>
        <td><%= link_to '消す', chat, method: :delete, data: { confirm: '本当にいいの？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
